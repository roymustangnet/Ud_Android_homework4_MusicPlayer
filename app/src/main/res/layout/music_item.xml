<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/music_title"
        tools:text="成都"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textview_leftpadding"
        android:paddingTop="@dimen/textview_toppadding"
        android:textSize="@dimen/music_textsize"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/musicinfo_leftpadding"
        android:paddingTop="@dimen/musicinfo_toppadding">
        <TextView
            android:id="@+id/singer"
            tools:text="赵雷"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/musicinfo_textsize"
            />
        <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/musicinfo_textsize"/>
        <TextView
            android:id="@+id/album"
            tools:text="无法长大"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/musicinfo_textsize"/>
    </LinearLayout>
</LinearLayout>